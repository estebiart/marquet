{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist/server",
        "paths": {
        "@/*": ["./resources/js/*"],
        "ziggy-js": ["./vendor/tightenco/ziggy"]
        }
    },
   "include": [
  "resources/js/**/*.ts",
  "resources/js/**/*.tsx",
  "bootstrap/ssr/**/*.ts",
  "bootstrap/ssr/**/*.tsx"
]
}
